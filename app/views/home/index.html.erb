<html lang="en">
  <head>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.css">
    
    
  </head>
  <body ng-app="StarterApp" layout="row" ng-controller="AppCtrl" ng-init="init()">    
    <style type="text/css">
      .card-media {
        background-color: #999999; 
      }

      * {
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
      }

      body { font-family: sans-serif; }

      .gallery {
        background: #EEE;
      }

      .gallery-cell {
        width: 20%;
        height: 350px;        
        margin-right: 20px;
        background: transparent;
        border-radius: 5px;
        counter-increment: gallery-cell;
      }

      /* cell number */
      .gallery-cell:before {
        display: block;
        text-align: center;        
      }

    </style>
    <div layout="column" class="relative" layout-fill role="main">      
      <md-toolbar ng-show="!showSearch">
        <div class="md-toolbar-tools">
          <md-button ng-click="toggleSidenav('left')" hide-gt-md aria-label="Menu">
            <ng-md-icon icon="menu"></ng-md-icon>
          </md-button>
          <h3>
            <!-- heading Section -->
          </h3>
          <span flex></span>
          <md-button aria-label="Search" ng-click="showSearch = !showSearch">
            <ng-md-icon icon="search"></ng-md-icon>
          </md-button>          
        </div>
        <md-tabs md-stretch-tabs class="md-primary" md-selected="data.selectedIndex">
          <md-tab id="tab1" aria-controls="tab1-content">
            Latest News
          </md-tab>
        </md-tabs>
      </md-toolbar>
      <md-toolbar class="md-hue-1" ng-show="showSearch">
        <div class="md-toolbar-tools">
          <md-button ng-click="showSearch = !showSearch" aria-label="Back">
            <ng-md-icon icon="arrow_back"></ng-md-icon>
          </md-button>
          <h3 flex="10">
            Back
          </h3>
          <md-input-container md-theme="input" flex>
            <label>&nbsp;</label>
            <input ng-model="search.title" placeholder="enter search">
          </md-input-container>
          <md-button aria-label="Search" ng-click="showSearch = !showSearch">
            <ng-md-icon icon="search"></ng-md-icon>
          </md-button>          
        </div>
      </md-toolbar>
      
      <md-content flex md-scroll-y>
        <ui-view layout="column" layout-fill layout-padding>
          <div class="inset" hide-sm></div>
          <ng-switch on="data.selectedIndex" class="tabpanel-container">            
            <div>              
              <!-- Flickity HTML init -->
              <div class="gallery js-flickity"
                data-flickity-options=''>
                <div class="gallery-cell" ng-repeat="item in activity | filter:search | limitTo: 10">
                  <md-card flex-gt-sm="20" flex-gt-md="20" style="margin: 0px">
                    <md-card-content>
                      <h2></h2>
                      <md-list>
                        <md-item>
                          <md-item-content style="height: 200px">                            
                            <div class="md-tile-content">                            
                              <h4>" {{item.title}} "</h4>
                              <p>
                                - {{item.author}}
                              </p>
                            </div>
                          </md-item-content>                          
                        </md-item>
                        <md-divider></md-divider>
                        <md-item layout class="inset" layout-align="center">
                            <md-button class="md-raised md-primary" ng-click="redirectTo(item.link)">More</md-button>
                        </md-item>
                      </md-list>
                    </md-card-content>
                  </md-card>
                </div>

            </div>                           
          </ng-switch>          
        </ui-view>
      </md-content>
      
    </div>
    <!-- Angular Material Dependencies -->
    
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular-aria.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/angular-material-icons/0.4.0/angular-material-icons.min.js"></script> 

    
  </body>
</html>